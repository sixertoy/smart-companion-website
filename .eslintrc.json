{
  "extends": "airbnb",
  "env": {
    "node": true,
    "mocha": true,
    "browser": true
  },
  "rules": {
    "indent": [2, 2, { "MemberExpression": 1 }],
    "padded-blocks": 0,
    "max-len": [2, 100],
    "comma-dangle": [2, "never"],
    "newline-per-chained-call": [2, {"ignoreChainWithDepth": 3}],
    "space-before-function-paren": [2, {
      "named": "always",
      "anonymous": "always",
      "asyncArrow": "ignore"
    }],
    "no-underscore-dangle": [2, {
      "allowAfterThis": true,
      "allowAfterSuper": true
    }]
  }
}
